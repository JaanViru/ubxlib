&uart1 {
    status = "okay";
    current-speed = <115200>;
    tx-pin = <41>;
    rx-pin = <12>;
/* For no flow control set "/delete-property/ rts-pin;" and corresponding for cts. Remove "hw-flow-control" line. */
    rts-pin = <14>;
    cts-pin = <15>;
    hw-flow-control;
};
&i2c1 {
    status = "okay";
    /* Otherwise board default settings are good. */
};
&spi3 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <28>;
	miso-pin = <27>;
	mosi-pin = <26>;
};